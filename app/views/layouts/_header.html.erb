<nav class="navbar">
  <div class="container-fluid">
    <div class="navbar-header">
      <a>
        <%= link_to "Cook Book", root_url, class: "navbar-brand active", id: "logo" %>
      </a>
    </div>
    <div>
      <ul class="nav navbar-nav">
        <li><%= link_to "Recipes", recipes_path %></li>
        <li><%= link_to "Chefs", chefs_path %></li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Cuisine <b class="caret"></b>
          </a>

          <ul class="dropdown-menu">
            <% Style.all.each do |style| %>
            <li><%= link_to style.name, style_path(style) %></li>
            <% end %>
            <% if logged_in? %>
                <li class="divider"></li>
                <li><%= link_to "New Style", new_style_path %></li>
            <% end %>
          </ul>
        </li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Ingredients <b class="caret"></b>
          </a>

          <ul class="dropdown-menu">
            <% Ingredient.all.each do |ingredient| %>
                <li><%= link_to ingredient.name, ingredient_path(ingredient) %></li>
            <% end %>
            <% if logged_in? %>
                <li class="divider"></li>
                <li><%= link_to "New Ingredient", new_ingredient_path %></li>
            <% end %>
          </ul>
        </li>

        <% if logged_in? %>
        <li><%= link_to "New Recipe", new_recipe_path %></li>
            <% end %>
      </ul>

      <ul class="nav navbar-nav navbar-right">

        <% if !logged_in? %>
        <li><%= link_to register_path do %>
              <span class="glyphicon glyphicon-user"></span>
              Sign Up
          <% end %>
        </li>
        <li><%= link_to login_path do %>
              <span class="glyphicon glyphicon-log-in"></span>
              Log in
          <% end %>
        </li>

            <% else %>
            <li id="logged_in_as"><a href="#" >Logged in as: <%= @current_user.chefname %></a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Account <b class="caret"></b>
          </a>

          <ul class="dropdown-menu">
            <li><%= link_to "Profile", current_user %></li>
            <li><%= link_to "Settings", edit_chef_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to "Log out", logout_path, method: "delete" %>
            </li>
          </ul>
        </li>
            <% end %>

      </ul>
    </div>
  </div>

</nav>
<hr class="hr_style"/>